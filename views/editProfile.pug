extends layouts/base

block content
    .form-container
        form(action=`/users${routes.editProfile}`, method="post", enctype="multipart/form-data")
            .fileUpload
                label(form="avatar") Avatar
                input(type="file",id="avatar",name="avatar",accept="image/*")
            input(type="text", placeholder="Name", name="name",value=user.name,required=true)
            input(type="submit",value="프로필 변경하기")
            